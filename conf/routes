# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           			controllers.Application.index()

# Disciplinas

POST	/alocarDisciplina/:id/:periodo			controllers.Application.alocarDisciplina(id: Long, periodo: Long)
POST	/desalocarDisciplina/:id/:force			controllers.Application.desalocarDisciplina(id: Long, force: Boolean)
GET		/resetar								controllers.Application.resetar()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.at(path="/public", file)
