# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           					controllers.Application.index()

# Disciplinas

GET 	/obterPreRequisitosNaoAlocados/:id/:periodo		controllers.Application.obterPreRequisitosNaoAlocados(id: Long, periodo: Long)
POST	/alocarDisciplina/:id/:periodo					controllers.Application.alocarDisciplina(id: Long, periodo: Long)
GET 	/obterPosRequisitosAlocados/:id					controllers.Application.obterPosRequisitosAlocados(id: Long)
POST	/desalocarDisciplina/:id						controllers.Application.desalocarDisciplina(id: Long)
POST	/moverDisciplina/:id/:periodo					controllers.Application.moverDisciplina(id: Long, periodo: Long)
POST	/alterarPeriodoCursando/:periodo					controllers.Application.alterarPeriodoCursando(periodo: Long)
GET		/resetar										controllers.Application.resetar()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               					controllers.Assets.at(path="/public", file)
